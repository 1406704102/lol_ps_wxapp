page {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.tab {
    white-space: nowrap;
    width: 750rpx;
    display: flex;
    justify-content: space-between;
}

.tab-item {
    text-align: center;
    display: inline-block;
    width: 15vw;
    height: 80rpx;
    line-height: 80rpx;
    color: black;
}

.tab-item.tab-active {
    font-size: 35rpx;
    font-weight: bold;
    color: cadetblue;
    border-bottom: cadetblue solid 6rpx;
}

